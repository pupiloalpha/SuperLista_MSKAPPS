<resources>

    <!-- Tema das caixas de diÃ¡logos -->
    <style name="TemaDialogo" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/azul_escuro</item>
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/azul_escuro</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaApp" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/azul_escuro</item>
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/azul_escuro</item>
        <item name="android:alertDialogTheme">@style/TemaDialogo</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaNovo" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/azul_escuro</item>
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/azul_escuro</item>
        <item name="android:alertDialogTheme">@style/TemaDialogo</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Tema das telas do aplicativo -->
    <style name="TemaTabs" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/azul_escuro</item>
        <item name="colorPrimaryDark">@color/preto</item>
        <item name="colorAccent">@color/branco</item>
        <item name="actionBarTabStyle">@style/ActionBarTab</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="android:alertDialogTheme">@style/TemaDialogo</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="ActionBarTab" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab background -->
        <item name="colorAccent">@color/branco</item>
    </style>

    <!-- Actionbat tab text size -->
    <style name="ActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_tab</item>
    </style>

    <!-- Tema da splash screen -->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Tema da texto -->
    <style name="TemaTexto" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/branco</item>
        <item name="colorControlNormal">@color/branco</item>
        <item name="colorControlActivated">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:textColorHint">@color/branco</item>
        <item name="android:textColorSecondary">@color/branco</item>
    </style>

</resources>
